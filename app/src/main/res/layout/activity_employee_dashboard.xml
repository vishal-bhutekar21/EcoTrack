```xml
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <!-- Side Navigation View -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/deep_blue"
        app:menu="@menu/navigation_menu"
        app:headerLayout="@layout/nav_header" />

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/deep_blue"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_logo"
            android:contentDescription="@string/app_logo" />

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:hint="@string/search"
            android:background="@drawable/search_bar_background"
            android:padding="8dp"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp" />

        <ImageView
            android:id="@+id/notifications_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_notifications"
            android:contentDescription="@string/notifications" />

        <ImageView
            android:id="@+id/user_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_user"
            android:contentDescription="@string/user_profile" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_section"
        android:padding="16dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:orientation="horizontal"
            android:spacing="16dp">

            <!-- Real-Time Waste Overview -->
            <!-- Total Waste Generated Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_waste_generated"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500 kg"
                        android:textSize="32sp"
                        android:textColor="@color/eco_green"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Waste Categories Chart Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/waste_categories"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/ic_pie_chart"
                        android:contentDescription="@string/waste_categories_chart"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Smart Bin Tracker Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/smart_bin_tracker"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/ic_bin_tracker"
                        android:contentDescription="@string/smart_bin_tracker_chart"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Carbon Footprint Tracker Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/carbon_footprint_tracker"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/ic_carbon_footprint"
                        android:contentDescription="@string/carbon_footprint_chart"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Automated Waste Pickup Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/automated_waste_pickup"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Scheduled Pickups List -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/scheduled_pickups"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup 1: 10:00 AM"
                        android:textSize="14sp"
                        android:textColor="@color/neutral_gray"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup 2: 2:00 PM"
                        android:textSize="14sp"
                        android:textColor="@color/neutral_gray"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginTop="8dp" />

                    <!-- Request Pickup Button -->
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/request_pickup"
                        android:backgroundTint="@color/eco_green"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginTop="16dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- AI-Based Insights & Recommendations -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ai_based_insights"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginBottom="8dp" />

                    <!-- AI Suggestions Card -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ai_suggestions"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reduce plastic waste by 20%"
                        android:textSize="14sp"
                        android:textColor="@color/neutral_gray"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Weekly Waste Trend Graph Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weekly_waste_trend"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_medium" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/ic_trend_graph"
                        android:contentDescription="@string/weekly_waste_trend_graph"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Employee Engagement & Gamification -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/employee_engagement"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Leaderboard Card -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/leaderboard"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Store 1: 100 kg"
                        android:textSize="14sp"
                        android:textColor="@color/neutral_gray"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Store 2: 150 kg"
                        android:textSize="14sp"
                        android:textColor="@color/neutral_gray"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Badges & Rewards Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/badges_rewards"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plastic Hero"
                        android:textSize="14sp"
                        android:textColor="@color/neutral_gray"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Metal Master"
                        android:textSize="14sp"
                        android:textColor="@color/neutral_gray"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </GridLayout>
    </ScrollView>
</RelativeLayout>
